<h1>Listing tasklists</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasklists.each do |tasklist| %>
  <tr>
    <td><%= tasklist.name %></td>
    <td><%= link_to 'Show', tasklist %></td>
    <td><%= link_to 'Edit', edit_tasklist_path(tasklist) %></td>
    <td><%= link_to 'Destroy', tasklist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

